<!-- Lease Driver List -->
<div id="driverDataContainer" style="padding: 20px; font-family: 'Poppins', sans-serif;">
  <h2 style="text-align: left; margin-bottom: 20px; color: #333;">Car History</h2>

  <!-- Scrollable container with only vertical scroll -->
  <div style="max-height: 500px; overflow-y: auto; overflow-x: auto; width: 100%; border-radius: 12px; box-shadow: 0 4px 8px rgba(0,0,0,0.1);">
  <table style="min-width: 1600px; border-collapse: collapse;">
      <thead>
     <tr style="background-color: #f8b500; color: white; position: sticky; top: 0; z-index: 2;">
          <th style="padding: 12px; background-color: #f8b500;">Allocation ID</th>
          <th style="padding: 12px; background-color: #f8b500;">Car Number</th>
          <th style="padding: 12px; background-color: #f8b500;">Car Type</th>
          <th style="padding: 12px; background-color: #f8b500;">AGD ID</th>
          <th style="padding: 12px; background-color: #f8b500;">Driver Name</th>
          <th style="padding: 12px; background-color: #f8b500;">Format</th>
          <th style="padding: 12px; background-color: #f8b500;">Date From</th>
          <th style="padding: 12px; background-color: #f8b500;">Date To</th>
          <th style="padding: 12px; background-color: #f8b500;">Total Days</th>
          <th style="padding: 12px; background-color: #f8b500;">UUID</th>
          <th style="padding: 12px; background-color: #f8b500;">Profile Image</th>
        </tr>
      </thead>
      <tbody>
        <% Car_History.forEach(driver => { %>
          <tr style="text-align: center; background-color: #fff; border-bottom: 1px solid #ddd;">
            <td style="padding: 12px;"><%= driver.Allocation_ID %></td>
            <td style="padding: 12px;"><%= driver.Car_Number %></td>
            <td style="padding: 12px;"><%= driver.Car_Type %></td>
            <td style="padding: 12px;"><%= driver.AGD_ID %></td>
            <td style="padding: 12px;"><%= driver.Driver_Name %></td>
            <td style="padding: 12px;"><%= driver.Format %></td>
            <td style="padding: 12px;"><%= driver.Date_From %></td>
            <td style="padding: 12px;"><%= driver.Date_To %></td>
            <td style="padding: 12px;"><%= driver.Total_Days %></td>
            <td style="padding: 12px;"><%= driver.UUID %></td>
             <td>
              <% if (driver.photo) { %>
                <img src="<%= driver.photo %>" alt="Photo" class="driver-photo">
              <% } else { %>
                <span style="color: gray;">No Photo</span>
              <% } %>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</div>
<style>
    .driver-photo {
    height: 80px;
    width: 80px;
    border-radius: 50%;
    object-fit: cover;
    border: 2px solid #f8b500;
  }
</style>
