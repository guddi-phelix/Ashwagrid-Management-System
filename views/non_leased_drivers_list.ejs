<style>
  /* Scrollable container (same as Lease Cars) */
  .nonlease-table-scroll {
    width: 100%;
    height: calc(100vh - 200px); /* Adjust for header/menu */
    overflow-y: auto;
    overflow-x: auto;
    border-radius: 12px;
    box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    padding-bottom: 20px; /* Space so last row isn't glued to bottom */
  }

  table {
    width: 100%;
    border-collapse: collapse;
    min-width: 800px; /* Allows horizontal scroll if needed */
  }

  thead {
    background-color: #f8b500;
    color: white;
    position: sticky;
    top: 0;
    z-index: 2;
  }

  th, td {
    padding: 12px;
    text-align: center;
  }

  /* Button styling (same as before) */
  .profile-btn {
    padding: 8px 16px;
    background-color: #f8b500;
    border: none;
    color: white;
    border-radius: 8px;
    font-weight: 500;
    cursor: pointer;
    font-family: 'Poppins', sans-serif;
    transition: background 0.3s, transform 0.2s;
  }

  .profile-btn:hover {
    background-color: #ff9f1c;
    transform: scale(1.05);
  }

  /* Prevent page scroll */
  html, body {
    margin: 0;
    height: 100%;
    overflow: hidden;
  }
</style>

<div id="nonLeaseDriverDataContainer" style="padding: 20px; font-family: 'Poppins', sans-serif; height: 100%;">
  <h2 style="text-align: center; margin-bottom: 20px; color: #333;">Non-Lease Cars</h2>
  
  <div class="nonlease-table-scroll">
    <table class="driver-table">
      <thead>
        <tr>
          <th>Profile Photo</th>
          <th>Username</th>
          <th>Vehicle Number</th>
          <th>Profile</th>
        </tr>
      </thead>
      <tbody>
        <% nonLeasedDrivers.forEach(driver => { %>
          <tr style="background-color: #fff; border-bottom: 1px solid #ddd;">
            <td>
              <% if (driver.photo) { %>
                <img src="<%= driver.photo %>" alt="Photo" style="height: 60px; width: 60px; border-radius: 50%; object-fit: cover; border: 2px solid #f8b500;">
              <% } else { %>
                <span style="color: gray;">No Photo</span>
              <% } %>
            </td>
            <td><%= driver.username %></td>
            <td><%= driver.vehicle %></td>
            <td>
              <form action="/admin-view-nonlease-driver-profile" method="GET">
                <input type="hidden" name="username" value="<%= driver.username %>">
                <button type="submit" class="profile-btn">View Profile</button>
              </form>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</div>
