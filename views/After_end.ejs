<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>ODO Meter Form</title>
  <!-- Google Font: Poppins -->
  <link href="https://fonts.googleapis.com/css2?family=Poppins&display=swap" rel="stylesheet">
  <meta name="viewport" content="width=device-width, initial-scale=1.0"> <!-- ✅ Mobile scaling -->
  <style>
    * {
      margin: 0;
      padding: 0;
      font-family: 'Poppins', sans-serif;
      box-sizing: border-box;
    }

    body {
      background: #f2f6fc;
      display: flex;
      justify-content: center;
      align-items: center;
      min-height: 100vh;
      padding: 15px;
    }

    form {
      background: white;
      padding: 30px 40px;
      border-radius: 15px;
      box-shadow: 0 5px 20px rgba(0, 0, 0, 0.1);
      width: 100%;
      max-width: 600px;
    }

    h2 {
      text-align: center;
      color: #333;
      margin-bottom: 25px;
      font-size: 26px;
    }

    label {
      font-weight: 500;
      color: #444;
      display: block;
      margin-bottom: 8px;
      font-size: 18px;
    }

    input[type="text"],
    input[type="file"] {
      width: 100%;
      padding: 14px 16px;
      border: 1px solid #ccc;
      border-radius: 10px;
      outline: none;
      font-size: 18px;
      margin-bottom: 25px;
      transition: 0.3s ease;
    }

    input[type="text"]:focus,
    input[type="file"]:focus {
      border-color: #8a2be2;
      box-shadow: 0 0 6px rgba(138, 43, 226, 0.3);
    }

    button {
      width: 100%;
      padding: 16px;
      background-color: #8a2be2;
      color: white;
      font-size: 18px;
      border: none;
      border-radius: 10px;
      cursor: pointer;
      transition: 0.3s ease;
    }

    button:hover {
      background-color: #6f1fd1;
      transform: scale(1.02);
    }


    /* ✅ Mobile Responsive */
    @media (max-width: 600px) {
      form {
        padding: 20px;
        width: 90%;
      }

      h2 {
        font-size: 22px;
      }

      label {
        font-size: 16px;
      }

      input[type="text"],
      input[type="file"] {
        font-size: 16px;
        padding: 12px;
        margin-bottom: 20px;
      }

      button {
        font-size: 16px;
        padding: 14px;
      }
    }
  </style>
</head>
<body>

 <form action="/After-end" method="post" enctype="multipart/form-data" autocomplete="off">
    <h2>Submit ODO Meter Reading</h2>

    <label for="reading">ODO Meter Reading:</label>
    <input type="text" name="reading" id="reading" required>

    <label for="photo">Upload ODO Photo:</label>
    <input type="file" name="file" accept="image/*" required />

    <button type="submit">Submit</button>
  </form>

  <script>
    window.onload = function () {
      const form = document.querySelector('form');
      form.reset();
    };

    const urlParams = new URLSearchParams(window.location.search);
    const isSuccess = urlParams.get('success');

    if (isSuccess) {
      const popup = document.getElementById('successPopup');
      popup.style.display = 'block';

      setTimeout(() => {
        popup.style.display = 'none';
        window.history.replaceState(null, null, window.location.pathname);
      }, 3000);
    }
  </script>

</body>
</html>
