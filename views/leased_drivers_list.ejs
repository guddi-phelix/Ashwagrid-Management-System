<!-- Lease Driver List -->
<div id="driverDataContainer" style="padding: 20px; font-family: 'Poppins', sans-serif;">
  <h2 style="text-align: center; margin-bottom: 20px; color: #333;">Lease Cars</h2>
  
  <table style="width: 100%; border-collapse: collapse; box-shadow: 0 4px 8px rgba(0,0,0,0.1); border-radius: 12px; overflow: hidden;">
    <thead style="background-color: #f8b500; color: white;">
      <tr>
        <th style="padding: 12px;">Profile Photo</th>
        <th style="padding: 12px;">Username</th>
        <th style="padding: 12px;">Vehicle Number</th>
        <th style="padding: 12px;">Profile</th>
      </tr>
    </thead>
    <tbody>
      <% leasedDrivers.forEach(driver => { %>
        <tr style="text-align: center; background-color: #fff; border-bottom: 1px solid #ddd;">
          <td style="padding: 12px;">
            <% if (driver.photo) { %>
              <img src="<%= driver.photo %>" alt="Photo" style="height: 60px; width: 60px; border-radius: 50%; object-fit: cover; border: 2px solid #f8b500;">
            <% } else { %>
              <span style="color: gray;">No Photo</span>
            <% } %>
          </td>
          <td style="padding: 12px;"><%= driver.username %></td>
          <td style="padding: 12px;"><%= driver.vehicle %></td>
          <td style="padding: 12px;">
            <form action="/admin-view-lease-driver-profile" method="GET">
              <input type="hidden" name="username" value="<%= driver.username %>">
              <button type="submit" style="padding: 8px 16px; background-color: #f8b500; border: none; color: white; border-radius: 8px; font-weight: 500; cursor: pointer; transition: background-color 0.3s ease; font-family: 'Poppins', sans-serif;" onmouseover="this.style.backgroundColor='#d99400'" onmouseout="this.style.backgroundColor='#f8b500'">
                View Profile
              </button>
            </form>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</div>
