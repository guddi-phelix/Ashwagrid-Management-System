<style>
  /* ✅ Same scrollable container style */
  .lease-table-scroll {
    max-height: 500px;
    overflow-y: auto;
    overflow-x: auto;
    width: 100%;
    border-radius: 12px;
    box-shadow: 0 4px 8px rgba(0,0,0,0.1);
  }

  table {
    min-width: 1600px;
    border-collapse: collapse;
    width: 100%;
  }

  thead {
    background-color: #f8b500;
    color: white;
    position: sticky;
    top: 0;
    z-index: 2;
  }

  th, td {
    padding: 12px;
    text-align: center;
    white-space: nowrap;
    border-bottom: 1px solid #ddd;
  }
</style>

<!-- Lease Driver List -->
<div id="driverDataContainer" style="padding: 20px; font-family: 'Poppins', sans-serif;">
  <h2 style="text-align: left; margin-bottom: 20px; color: #333;">Daily Accounts</h2>
  
  <!-- ✅ Filters -->
  <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 15px; flex-wrap: wrap; gap: 10px;">
    <div id="filters" style="display: flex; gap: 10px;">
      <select id="sortSelect" style="padding: 8px; border: 1px solid #ccc; border-radius: 6px;">
        <option value="">Sort By</option>
        <option value="agdAsc">AGD ID ↑</option>
        <option value="agdDesc">AGD ID ↓</option>
        <option value="nameAsc">Driver Name A → Z</option>
        <option value="nameDesc">Driver Name Z → A</option>
        <option value="dateAsc">Date ↑</option>
        <option value="dateDesc">Date ↓</option>
      </select>
    </div>

    <input 
      type="text" 
      id="searchInput"
      placeholder="Search..." 
      style="padding: 10px; width: 100%; max-width: 300px; border: 1px solid #ccc; border-radius: 6px;"
    >
  </div>

  <!-- ✅ Scrollable Table -->
  <div class="lease-table-scroll">
    <table id="dailyTable">
      <thead>
        <tr>
          <th>AGD ID</th>
          <th>Driver Name</th>
          <th>Assigned Car</th>
          <th>Date</th>
          <th>Cash Collection</th>
          <th>Login Hours</th>
          <th>Toll</th>
          <th>CNG (paid by driver)</th>
          <th>Driver Salary</th>
          <th>RTO Penalty</th>
          <th>Adjustment</th>
          <th>Payable Amount</th>
          <th>Paid Amount</th>
          <th>Rent</th>
          <th>Rent To Deposit</th>
          <th>Deposit To Rent</th>
        </tr>
      </thead>
     <tbody id="tableBody" style="background-color:white;color: black;">
        <% Daily_accounts.forEach(driver => { %>
          <tr>
            <td><%= driver.AGD_ID %></td>
            <td><%= driver.Driver_Name %></td>
            <td><%= driver.Assigned_Car %></td>
            <td><%= driver.Date %></td>
            <td><%= driver.Cash_Collection %></td>
            <td><%= driver.Login_hours %></td>
            <td><%= driver.Toll %></td>
            <td><%= driver.CNG %></td>
            <td><%= driver.Driver_salary %></td>
            <td><%= driver.RTO %></td>
            <td><%= driver.Adjustment %></td>
            <td><%= driver.payable_amt %></td>
            <td><%= driver.Paid_amt %></td>
            <td><%= driver.Rent %></td>
            <td><%= driver.Rent_to_deposit%></td>
            <td><%= driver.deposit_to_rent%></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</div>

