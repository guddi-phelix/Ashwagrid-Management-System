<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Driver Profile ‚Äì non Leased</title>
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

  <style>
    /* Global Styles */
    * {
      box-sizing: border-box;
      margin: 0;
      padding: 0;
    }

    body {
      font-family: 'Poppins', sans-serif;
      background: linear-gradient(to right, #e9f7ff, #fff1f8);
      color: #333;
      min-height: 100vh;
    }

    /* Top Bar */
    .top-bar {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 20px 40px;
      background-color: #fff;
      box-shadow: 0 4px 10px rgba(0, 0, 0, 0.05);
      flex-wrap: wrap;
      position: relative;
    }

    .top-bar h1 {
      font-size: 28px;
      color: #007bff;
    }

    /* Dropdown Menu */
    .action-menu {
      position: relative;
      display: inline-block;
    }

    .menu-btn {
      background-color: #007bff;
      color: white;
      font-size: 24px; /* bigger icon */
      padding: 12px 16px;
      border-radius: 50%;
      border: none;
      cursor: pointer;
      display: flex;
      align-items: center;
      justify-content: center;
      transition: all 0.3s ease;
    }

    .menu-btn:hover {
      background-color: #0056b3;
    }

    .menu-items {
      display: none;
      position: absolute;
      right: 0;
      top: 60px;
      background: #fff;
      border-radius: 12px;
      box-shadow: 0 5px 20px rgba(0,0,0,0.15);
      padding: 10px;
      z-index: 100;
      min-width: 220px;
      flex-direction: column;
      gap: 10px;
      transition: all 0.3s ease;
    }

    .menu-items button,
    .menu-items form button {
      width: 100%;
      padding: 12px;
      font-size: 16px;
      border-radius: 12px;
      border: none;
      cursor: pointer;
      display: flex;
      align-items: center;
      gap: 12px;
      font-weight: 600;
      transition: all 0.3s ease;
    }

    /* Individual Button Colors */
    .daily-accounts {
      background-color: #28a745;
      color: #fff;
    }
    .daily-accounts:hover { background-color: #1e7e34; }

    .variable-performance {
      background-color: #17a2b8;
      color: #fff;
    }
    .variable-performance:hover { background-color: #117a8b; }

    .logout-btn {
      background-color: #dc3545;
      color: #fff;
    }
    .logout-btn:hover { background-color: #c82333; }

    .action-menu.active .menu-items {
      display: flex;
      flex-direction: column;
    }

    /* Profile Container */
    .profile-container {
      max-width: 900px;
      margin: 40px auto;
      background: white;
      padding: 40px;
      border-radius: 20px;
      box-shadow: 0 5px 25px rgba(0, 0, 0, 0.08);
    }

    .profile-header {
      display: flex;
      align-items: center;
      gap: 40px;
      margin-bottom: 30px;
      border-bottom: 1px solid #eee;
      padding-bottom: 30px;
      flex-wrap: wrap;
    }

    .profile-pic {
      width: 180px;
      height: 180px;
      border-radius: 50%;
      object-fit: cover;
      border: 5px solid #007bff;
      box-shadow: 0 0 12px rgba(0, 123, 255, 0.3);
    }

    .profile-info {
      flex: 1;
    }

    .profile-info h2 {
      font-size: 28px;
      color: #007bff;
      margin-bottom: 10px;
    }

    .info {
      font-size: 18px;
      margin: 8px 0;
    }

    .label {
      font-weight: 600;
      color: #555;
    }

    /* Trip Select Row */
    .trip-select-row {
      display: flex;
      align-items: center;
      gap: 20px;
      margin-top: 40px;
      background: #f1f9ff;
      padding: 20px;
      border-radius: 16px;
      box-shadow: 0 4px 14px rgba(0, 123, 255, 0.1);
      border: 1px solid #d0e7ff;
      flex-wrap: wrap;
    }

    .trip-select-row label {
      font-size: 18px;
      font-weight: 600;
      color: #007bff;
      white-space: nowrap;
    }

    .trip-select-row select {
      flex: 1;
      font-size: 15px;
      padding: 8px 12px;
      border-radius: 8px;
      border: 1.5px solid #007bff;
      background: #fff;
      color: #333;
      box-shadow: 0 2px 6px rgba(0, 123, 255, 0.05);
      transition: border-color 0.3s ease;
      font-family: 'Poppins', sans-serif;
      max-width: 280px;
    }

    .trip-select-row select option {
      font-size: 14px;
      padding: 6px;
    }

    .trip-select-row select:focus {
      border-color: #0056b3;
      outline: none;
    }

.top-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20px 40px;
  background-color: #fff;
  box-shadow: 0 4px 10px rgba(0, 0, 0, 0.05);
  flex-wrap: wrap;
  position: relative;
}
.top-bar1 {
  display: flex;              /* flex container */
  align-items: center;        /* vertical alignment of children */
  gap: 8px;                   /* space between back button and menu */
}

.back-btn {
  display: inline-flex;
  align-items: center;
  gap: 6px;
  padding: 8px 12px;
  background-color: #b92d3d;
  color: #fff;
  font-weight: 600;
  border-radius: 8px;
  text-decoration: none;
  transition: background 0.3s ease;
  margin-top: 0; /* remove this */
}


.back-btn:hover {
  background-color: #0056b3;
}



    /* Responsive */
    @media (max-width: 992px) {
      .profile-container {
        margin: 20px;
        padding: 25px;
      }

      .profile-pic {
        width: 140px;
        height: 140px;
      }

      .profile-info h2 {
        font-size: 22px;
      }

      .info {
        font-size: 16px;
      }
    }
  </style>
</head>
<body>
  <!-- Top Bar -->
  <div class="top-bar">
    <h1>Driver Profile</h1>
    <div class="top-bar1">
      <a href="/admin-dashboard?load=nonlease" class="back-btn">
    <i class="fas fa-arrow-left"></i> Back
</a>
    <!-- Dropdown Menu -->
    <div class="action-menu">
      <button class="menu-btn"><i class="fas fa-bars"></i></button>
      <div class="menu-items">
        <button class="daily-accounts" onclick="location.href='/driver_daily_accounts'"><i class="fas fa-calendar-day"></i> Daily Accounts</button>
        <button class="variable-performance" onclick="location.href='/variable-performance'"><i class="fas fa-chart-line"></i> Variable Performance</button>
        <form action="/logout" method="POST">
          <button type="submit" class="logout-btn"><i class="fas fa-sign-out-alt"></i> Logout</button>
        </form>
      </div>
    </div>
    </div>
    
  </div>

  <!-- Profile Section -->
  <div class="profile-container">
    <!-- Back Button outside profile container -->

    <div class="profile-header">
   
      <% if (profilePhoto) { %>
        <img src="<%= profilePhoto %>" alt="Profile Photo" class="profile-pic">
      <% } else { %>
        <img src="https://via.placeholder.com/180" alt="No Photo" class="profile-pic">
      <% } %>

      <div class="profile-info">
        <h2><%= username %></h2>
        <h2><%= agdId %></h2>
        <div class="info"><span class="label">Vehicle Number:</span> <%= vehicleNumber %></div>
        <div class="info"><span class="label">Status:</span> Not Leased</div>
      </div>
    </div>

    <div class="trip-select-row">
      <label for="trip-select">üìù Choose Trip Form Type:</label>
      <select id="trip-select" onchange="goToForm(this)">
        <option value="">-- Select Trip Type --</option>
        <option value="/trip-form/before">Before Start</option>
        <option value="/trip-form/cng">Filling CNG</option>
        <option value="/trip-form/after">After End</option>
      </select>
    </div>
  </div>

  <script>
    // Dropdown toggle
    const menuBtn = document.querySelector(".menu-btn");
    const actionMenu = document.querySelector(".action-menu");

    menuBtn.addEventListener("click", () => {
      actionMenu.classList.toggle("active");
    });

    window.addEventListener("click", (e) => {
      if (!actionMenu.contains(e.target)) {
        actionMenu.classList.remove("active");
      }
    });

    // Redirect for trip form
    function goToForm(select) {
      const link = select.value;
      if (link) {
        window.location.href = link;
      }
    }

    // Prevent back navigation cache
    window.addEventListener("pageshow", function (event) {
      if (event.persisted || performance.getEntriesByType("navigation")[0].type === "back_forward") {
        window.location.reload();
      }
    });
  </script>
</body>
</html>
