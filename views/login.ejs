<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Login</title>
  
  <link href="https://fonts.googleapis.com/css2?family=Poppins&display=swap" rel="stylesheet" />
  <link
    rel="stylesheet"
    href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
  />


  <style>
    /* Reset and base */
    * {
      box-sizing: border-box;
    }
    body {
      margin: 0;
      font-family: 'Poppins', sans-serif;
      background: #f5f8fa;
      height: 100vh;
      display: flex;
      justify-content: center;
      align-items: center;
      color: #333;
      font-size: 18px;
    }

    .login-box {
      background: #fff;
      padding: 40px 35px 45px;
      border-radius: 16px;
      box-shadow: 0 8px 30px rgba(0, 0, 0, 0.1);
      width: 500px;
      max-width: 95%;
      text-align: center;
      transition: box-shadow 0.3s ease;
    }
    .login-box:hover {
      box-shadow: 0 12px 40px rgba(0, 0, 0, 0.15);
    }

    h2 {
      font-weight: 700;
      font-size: 28px;
      color: #222;
      margin-bottom: 30px;
      user-select: none;
    }

    /* Toggle Buttons */
    .toggle-container {
      display: flex;
      justify-content: center;
      margin-bottom: 35px;
      gap: 15px;
    }
    .toggle-btn {
      flex: 1;
      cursor: pointer;
      font-weight: 600;
      font-size: 18px;
      padding: 12px 0;
      border-radius: 15px;
      border: 2px solid #4a90e2;
      color: #4a90e2;
      background: transparent;
      transition: all 0.3s ease;
      user-select: none;
      box-shadow: inset 0 0 0 0 #4a90e2;
      outline-offset: 2px;
      outline-color: transparent;
      outline-style: solid;
      outline-width: 2px;
    }
    .toggle-btn:hover {
      background: #e6f0ff;
    }
    .toggle-btn.active {
      background: #4a90e2;
      color: white;
      box-shadow: inset 0 0 10px 3px #357abd;
      outline-color: #357abd;
    }

    /* Forms */
    form {
      display: none;
      text-align: left;
    }
    form.active {
      display: block;
    }

    .input-group {
      position: relative;
      margin-bottom: 30px;
    }
    .input-group i.fa-user,
    .input-group i.fa-lock {
      position: absolute;
      top: 50%;
      left: 15px;
      transform: translateY(-50%);
      color: #aaa;
      font-size: 18px;
      pointer-events: none;
      transition: color 0.3s ease;
      width: 20px;
    }
    .input-group input {
      width: 100%;
      padding: 14px 55px 14px 45px; /* leave space for eye icon */
      font-size: 17px;
      border: 2px solid #ddd;
      border-radius: 12px;
      outline: none;
      transition: border-color 0.3s ease, box-shadow 0.3s ease;
      font-family: 'Poppins', sans-serif;
      color: #333;
    }
    .input-group input:focus {
      border-color: #4a90e2;
      box-shadow: 0 0 8px rgba(74, 144, 226, 0.4);
    }
    .input-group input:focus + i.fa-user,
    .input-group input:focus + i.fa-lock {
      color: #4a90e2;
    }

    /* Password toggle icon */
    .toggle-password {
      position: absolute;
      right: 15px;
      top: 50%;
      transform: translateY(-50%);
      font-size: 18px;
      cursor: pointer;
      color: #999;
      transition: color 0.3s ease;
      user-select: none;
      width: 22px;
      height: 22px;
      display: flex;
      align-items: center;
      justify-content: center;
    }
    .toggle-password:hover {
      color: #4a90e2;
    }
    .toggle-password.fa-eye-slash {
      color: #2e5bb8;
    }

    button {
      width: 100%;
      padding: 15px 0;
      background: #4a90e2;
      border: none;
      border-radius: 15px;
      font-size: 20px;
      color: white;
      font-weight: 700;
      cursor: pointer;
      box-shadow: 0 8px 15px rgba(74, 144, 226, 0.3);
      transition: background 0.3s ease, box-shadow 0.3s ease;
      user-select: none;
    }
    button:hover {
      background: #357abd;
      box-shadow: 0 10px 20px rgba(53, 122, 189, 0.5);
    }

    .error-message {
      color: #d93025;
      background: #fce8e6;
      border: 1px solid #d93025;
      padding: 12px;
      border-radius: 10px;
      margin-bottom: 20px;
      font-weight: 600;
      text-align: center;
      user-select: none;
    }


@media (max-width: 480px) {
  .login-box {
    width:65%;
    padding: 20px 15px 25px;
    border-radius: 12px;
  }
  h2 {
    font-size: 20px;
  }
  .toggle-container {
    flex-direction: column;
    gap: 10px;
  }
  .toggle-btn {
    width: 100%;
    font-size: 15px;
  }
  .input-group input {
    font-size: 14px;
  }
  button {
    font-size: 15px;
    padding: 10px 0;
  }
.toggle-container {
    flex-direction: row;   /* Keep side by side */
    gap: 8px;              /* Smaller gap for mobile */
  }
  .toggle-btn {
    font-size: 14px;
    padding: 8px 0;
  }
}

  </style>
  <script>window.history.forward();</script>
</head>
<body>
  <div class="login-box" role="main" aria-label="Login form">
    <h2>Login</h2>

    <% if (error) { %>
      <div class="error-message" role="alert"><%= error %></div>
    <% } %>

    <div class="toggle-container" role="tablist" aria-label="Select user type">
      <div id="driverToggle" class="toggle-btn active" role="tab" tabindex="0" aria-selected="true" aria-controls="driverForm">Driver</div>
      <div id="adminToggle" class="toggle-btn" role="tab" tabindex="0" aria-selected="false" aria-controls="adminForm">Admin</div>
    </div>

    <!-- Driver Login Form -->
    <form action="/login" method="POST" id="driverForm" class="active" role="tabpanel" aria-hidden="false" aria-labelledby="driverToggle" autocomplete="on">
      <div class="input-group">
        <i class="fas fa-user" aria-hidden="true"></i>
        <input type="text" name="agdId" placeholder="AGD-ID" required aria-label="AGD-ID" autocomplete="username" />
      </div>

      <div class="input-group">
        <i class="fas fa-lock" aria-hidden="true"></i>
        <input
          type="password"
          name="password"
          id="driverPassword"
          placeholder="Password"
          required
          aria-label="Password"
          autocomplete="current-password"
        />
        <i class="fas fa-eye toggle-password" data-target="driverPassword" aria-label="Toggle password visibility" role="button" tabindex="0"></i>
      </div>

      <button type="submit">Login</button>
    </form>

    <!-- Admin Login Form -->
    <form action="/admin" method="POST" id="adminForm" role="tabpanel" aria-hidden="true" aria-labelledby="adminToggle" autocomplete="on">
      <div class="input-group">
        <i class="fas fa-user" aria-hidden="true"></i>
        <input type="text" name="username" placeholder="Username" required aria-label="Username" autocomplete="username" />
      </div>

      <div class="input-group">
        <i class="fas fa-lock" aria-hidden="true"></i>
        <input
          type="password"
          name="password"
          id="adminPassword"
          placeholder="Password"
          required
          aria-label="Password"
          autocomplete="current-password"
        />
        <i class="fas fa-eye toggle-password" data-target="adminPassword" aria-label="Toggle password visibility" role="button" tabindex="0"></i>
      </div>

      <button type="submit">Login</button>
    </form>
  </div>

  <script>
    // Toggle between Driver/Admin forms with keyboard accessibility
    const driverToggle = document.getElementById('driverToggle');
    const adminToggle = document.getElementById('adminToggle');
    const driverForm = document.getElementById('driverForm');
    const adminForm = document.getElementById('adminForm');

    function activateDriver() {
      driverToggle.classList.add('active');
      driverToggle.setAttribute('aria-selected', 'true');
      driverToggle.focus();

      adminToggle.classList.remove('active');
      adminToggle.setAttribute('aria-selected', 'false');

      driverForm.classList.add('active');
      driverForm.setAttribute('aria-hidden', 'false');

      adminForm.classList.remove('active');
      adminForm.setAttribute('aria-hidden', 'true');
    }

    function activateAdmin() {
      adminToggle.classList.add('active');
      adminToggle.setAttribute('aria-selected', 'true');
      adminToggle.focus();

      driverToggle.classList.remove('active');
      driverToggle.setAttribute('aria-selected', 'false');

      adminForm.classList.add('active');
      adminForm.setAttribute('aria-hidden', 'false');

      driverForm.classList.remove('active');
      driverForm.setAttribute('aria-hidden', 'true');
    }

    driverToggle.addEventListener('click', activateDriver);
    adminToggle.addEventListener('click', activateAdmin);

    driverToggle.addEventListener('keydown', e => {
      if (e.key === 'Enter' || e.key === ' ') activateDriver();
    });
    adminToggle.addEventListener('keydown', e => {
      if (e.key === 'Enter' || e.key === ' ') activateAdmin();
    });

    // Toggle password visibility for both forms
    document.querySelectorAll('.toggle-password').forEach(icon => {
      icon.addEventListener('click', () => {
        const targetId = icon.getAttribute('data-target');
        const input = document.getElementById(targetId);
        const type = input.getAttribute('type') === 'password' ? 'text' : 'password';
        input.setAttribute('type', type);
        icon.classList.toggle('fa-eye-slash');
      });

      // Keyboard accessibility for toggle icons
      icon.addEventListener('keydown', (e) => {
        if (e.key === 'Enter' || e.key === ' ') {
          e.preventDefault();
          icon.click();
        }
      });
    });
  </script>
</body>
</html>
