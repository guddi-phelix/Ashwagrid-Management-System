<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Driver Daily Account</title>
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap" rel="stylesheet">
  <style>
    body {
      font-family: 'Poppins', sans-serif;
      background: #f5f8fa;
      margin: 0;
      padding: 0;
      color: #333;
    }

    .container {
      max-width: 900px;
      margin: 40px auto;
      background: white;
      padding: 30px 40px;
      border-radius: 15px;
      box-shadow: 0 5px 25px rgba(0, 0, 0, 0.08);
    }

    .header {
      display: flex;
      flex-direction: column;
      align-items: flex-start;
      padding: 20px;
      border-left: 6px solid #ff4081; /* colored accent line */
      background: #f0f8ff;
      border-radius: 10px;
      margin-bottom: 30px;
    }

    .header h2 {
      color: #ff4081;
      font-size: 32px;
      margin: 0 0 5px 0;
      font-weight: 700;
    }

    .header h3 {
      color: #007bff;
      font-size: 24px;
      margin: 0;
      font-weight: 600;
    }

    .account-row {
      display: flex;
      justify-content: space-between;
      padding: 12px 0;
      border-bottom: 1px solid #eee;
    }

    .account-row:last-child {
      border-bottom: none;
    }

    .label {
      font-weight: 600;
      color: #555;
      flex-basis: 45%;
    }

    .data {
      flex-basis: 50%;
      text-align: right;
      color: #007bff;
      font-weight: 500;
    }

    /* Hover effect for rows */
    .account-row:hover {
      background: #f9f9f9;
      transition: 0.3s;
    }

    @media (max-width: 768px) {
      .account-row {
        flex-direction: column;
        align-items: flex-start;
      }

      .data {
        text-align: left;
        margin-top: 5px;
      }

      .header {
        padding: 15px;
      }

      .header h2 {
        font-size: 28px;
      }

      .header h3 {
        font-size: 20px;
      }
    }
  </style>
</head>
<body>
  <div class="container">
    <% driverData.forEach(item => { %>
      <div class="header">
        <h2><%= item.Driver_Name %></h2>
        <h3><%= item.Assigned_Car %></h3>
      </div>

      <div class="account-row">
        <div class="label">AGD ID:</div>
        <div class="data"><%= item.AGD_ID %></div>
      </div>

      <div class="account-row">
        <div class="label">Date:</div>
        <div class="data"><%= item.Date %></div>
      </div>

      <div class="account-row">
        <div class="label">Cash Collection:</div>
        <div class="data"><%= item.Cash_Collection %></div>
      </div>

      <div class="account-row">
        <div class="label">Login Hours:</div>
        <div class="data"><%= item.Login_hours %></div>
      </div>

      <div class="account-row">
        <div class="label">Toll:</div>
        <div class="data"><%= item.Toll %></div>
      </div>

      <div class="account-row">
        <div class="label">CNG:</div>
        <div class="data"><%= item.CNG %></div>
      </div>

      <div class="account-row">
        <div class="label">Driver Salary:</div>
        <div class="data"><%= item.Driver_salary %></div>
      </div>

      <div class="account-row">
        <div class="label">RTO:</div>
        <div class="data"><%= item.RTO %></div>
      </div>

      <div class="account-row">
        <div class="label">Adjustment:</div>
        <div class="data"><%= item.Adjustment %></div>
      </div>

      <div class="account-row">
        <div class="label">Payable Amount:</div>
        <div class="data"><%= item.payable_amt %></div>
      </div>

      <div class="account-row">
        <div class="label">Paid Amount:</div>
        <div class="data"><%= item.Paid_amt %></div>
      </div>

      <div class="account-row">
        <div class="label">Rent:</div>
        <div class="data"><%= item.Rent %></div>
      </div>

      <div class="account-row">
        <div class="label">Rent to Deposit:</div>
        <div class="data"><%= item.Rent_to_deposit %></div>
      </div>

      <div class="account-row">
        <div class="label">Deposit to Rent:</div>
        <div class="data"><%= item.deposit_to_rent %></div>
      </div>
    <% }) %>
  </div>
</body>
</html>